
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Category Management";
}

<div class="container-fluid">
    <div class="card">
        <br>
            <p class="h3"style="text-align:center;margin-top: 5px;color:red" >SỬA HẠNG MỤC</p>
            
        <br>
        <div class="row">  
            <div class="col-md-12" style="margin-top:20px">
                <form method="post" action="/Admin/Category/Edit/@Model.IdCategory">
                    <div class="form-group row mb-4 align-items-center">
                        <label for="CategoryName" class="col-sm-2 col-form-label text-end">Tên hạng mục:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="CategoryName" name="NameCategory" placeholder="Nhập tên hạng mục" value="@Model.NameCategory">
                        </div>
                    </div>
                    <div class="form-group row mb-4 align-items-center">
                        <label for="Description" class="col-sm-2 col-form-label text-end">Mô tả:</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" id="Description" name="Description" placeholder="Nhập mô tả" rows="3">@Model.Description</textarea>
                        </div>
                    </div>
                    <div class="form-group row" style="margin-bottom: 30px">
                        <div class="col-12 d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-success px-4 py-2">Lưu</button>
                            <a href="/Admin/Category" class="btn btn-info px-4 py-2 text-white">Quay lại</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>